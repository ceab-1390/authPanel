<!-- jQuery y Bootstrap 3 JS -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
$(document).ready(function () {
    // Selecciona todos los enlaces con type="button"
    $('.modaltrigger').each(function() {
        // Guarda el ID del modal correspondiente en una variable
        var modalId = $(this).attr('id');

        // Asigna un manejador de eventos de clic a cada enlace
        $(this).click(function(e) {
            // Previene el comportamiento predeterminado del enlace
            e.preventDefault();

            // Muestra el modal correspondiente
            $('#' + modalId).modal('show');
        });
    });
});
</script>

